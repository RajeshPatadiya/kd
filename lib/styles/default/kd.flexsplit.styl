@import "./kdfn"

/*
**  KDFlexSplit STYLES
*/

.flex-split

  overflow                  hidden
  flex()

  &.vertical
    flex-flow               row nowrap
    > .flex-resizer
      width                 4px
      cursor                ew-resize

  &.horizontal
    flex-flow               column nowrap
    > .flex-resizer
      height                4px
      cursor                ns-resize

  .flex-resizer
    flex                    none
    z-index                 100
    background              #333
    flex()

  .flex-view
    overflow                hidden
    borderBox()
